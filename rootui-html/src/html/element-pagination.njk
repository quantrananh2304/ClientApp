{% set page_title = 'Element Pagination' %}
{% set header_title = 'Pagination' %}
{% set with_sidebar = true %}
{% extends 'layouts/layout-container.njk' %}

{% set breadcrumbs = [
    ['Home', 'dashboard.html'],
    ['Components', '#'],
    ['Base', '#']
] %}

{% block content %}

{% from "macros/snippet.njk" import snippet %}
{% from "macros/sidebar.njk" import sidebar %}

<h2 id="paginationBase">Base</h2>
{% call snippet('PaginationBase') %}
<nav aria-label="Page navigation example">
    <ul class="pagination">
        <li class="page-item"><a class="page-link" href="#">Previous</a></li>
        <li class="page-item"><a class="page-link" href="#">1</a></li>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
        <li class="page-item"><a class="page-link" href="#">Next</a></li>
    </ul>
</nav>
{%- endcall %}

{% call snippet('PaginationIcon') %}
<nav aria-label="Page navigation example">
    <ul class="pagination">
        <li class="page-item"><a class="page-link" href="#"><span data-feather="chevron-left" class="rui-icon rui-icon-stroke-1_5"></span></a></li>
        <li class="page-item"><a class="page-link" href="#">1</a></li>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
        <li class="page-item"><a class="page-link" href="#"><span data-feather="chevron-right" class="rui-icon rui-icon-stroke-1_5"></span></a></li>
    </ul>
</nav>
{%- endcall %}

<div class="rui-gap-4" id="paginationDisabled"></div>
<h2>Disabled and active states</h2>
{% call snippet('PaginationDisabled') %}
<nav aria-label="Page navigation example">
    <ul class="pagination">
        <li class="page-item disabled"><a class="page-link" href="#"><span data-feather="chevron-left" class="rui-icon rui-icon-stroke-1_5"></span></a></li>
        <li class="page-item"><a class="page-link" href="#">1</a></li>
        <li class="page-item active"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
        <li class="page-item"><a class="page-link" href="#"><span data-feather="chevron-right" class="rui-icon rui-icon-stroke-1_5"></span></a></li>
    </ul>
</nav>
{%- endcall %}

<div class="rui-gap-4" id="paginationSizing"></div>
<h2>Sizing</h2>
{% call snippet('PaginationLg') %}
<nav aria-label="Page navigation example">
    <ul class="pagination pagination-lg">
        <li class="page-item active" aria-current="page">
            <span class="page-link">
                1
                <span class="sr-only">(current)</span>
            </span>
        </li>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
    </ul>
</nav>
{%- endcall %}

{% call snippet('PaginationSm') %}
<nav aria-label="Page navigation example">
    <ul class="pagination pagination-sm">
        <li class="page-item active" aria-current="page">
            <span class="page-link">
                1
                <span class="sr-only">(current)</span>
            </span>
        </li>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
    </ul>
</nav>
{%- endcall %}

{% endblock %}


{% block content_sidebar %}
{% call sidebar() %}
    <li><a class="nav-link" href="#paginationBase">Base</a></li>
    <li><a class="nav-link" href="#paginationDisabled">Disabled and active states</a></li>
    <li><a class="nav-link" href="#paginationSizing">Sizing</a></li>
{% endcall %}
{% endblock %}


{% block vendor_css %}

    <!-- Highlight -->
    <link rel="stylesheet" href="./assets/vendor/highlightjs/styles/default.css">

{% endblock %}

{% block vendor_js %}

    <!-- Highlight -->
    <script src="./assets/vendor/highlightjs/highlight.pack.min.js"></script>

{% endblock %}
