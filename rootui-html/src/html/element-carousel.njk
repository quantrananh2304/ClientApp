{% set page_title = 'Element Carousel' %}
{% set header_title = 'Carousel' %}
{% set with_sidebar = true %}
{% extends 'layouts/layout-container.njk' %}

{% set breadcrumbs = [
    ['Home', 'dashboard.html'],
    ['Components', '#'],
    ['Base', '#']
] %}

{% block content %}

{% from "macros/snippet.njk" import snippet %}
{% from "macros/sidebar.njk" import sidebar %}

<h2 id="carouselBase">Base</h2>
{% call snippet('CarouselBase', 'no-frame-preview') %}
<div id="carouselExampleControls" class="carousel carousel-light slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="../../../common-assets/images/slide-first.svg" class="d-block w-100" alt="">
        </div>
        <div class="carousel-item">
            <img src="../../../common-assets/images/slide-second.svg" class="d-block w-100" alt="">
        </div>
        <div class="carousel-item">
            <img src="../../../common-assets/images/slide-third.svg" class="d-block w-100" alt="">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span data-feather="chevron-left" class="rui-icon rui-icon-stroke-1_5"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span data-feather="chevron-right" class="rui-icon rui-icon-stroke-1_5"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
{%- endcall %}

<div class="rui-gap-4" id="carouselIndicators"></div>
<h2>Indicators</h2>
{% call snippet('CarouselIndicators', 'no-frame-preview') %}
<div id="carouselExampleIndicators" class="carousel carousel-light slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="../../../common-assets/images/slide-first.svg" class="d-block w-100" alt="">
        </div>
        <div class="carousel-item">
            <img src="../../../common-assets/images/slide-second.svg" class="d-block w-100" alt="">
        </div>
        <div class="carousel-item">
            <img src="../../../common-assets/images/slide-third.svg" class="d-block w-100" alt="">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span data-feather="chevron-left" class="rui-icon rui-icon-stroke-1_5"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span data-feather="chevron-right" class="rui-icon rui-icon-stroke-1_5"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
{%- endcall %}

<div class="rui-gap-4" id="carouselCaptions"></div>
